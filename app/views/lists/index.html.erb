<div class="bg-light">

  <div class="navbar-lewagon d-flex align-items-center border border-dark">
    <h1 class="m-3">All lists</h1>
    <%= link_to "Add a list", new_list_path, class: "btn btn-primary m-3"%>
  </div>
  <div class="d-flex">
    <ul class="p-3 m-3 flex-column">
      <% @lists.each do |list| %>
      <li class="card-list p-3 m-3"><%= link_to list.name, list_path(list), class: "link"%></li>
      <% end %>
    </ul>
  </div>
</div>
