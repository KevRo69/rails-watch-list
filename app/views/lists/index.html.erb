<div class="navbar-lewagon d-flex align-items-center border border-dark">
  <h1 class="m-3">All lists</h1>
  <%= link_to "Add a list", new_list_path, class: "btn btn-primary m-3"%>
</div>
<ul class="p-3 m-3 cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list), class:"link" do%>
      <li class="card-list p-3 m-3 d-flex justify-content-center align-items-center"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <h2><%=list.name%></h2>
      </li>
    <% end %>
  <% end %>
</ul>
